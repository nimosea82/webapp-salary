.container{
  height: 1500rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: rgb(201, 209, 209);
  color: #000;
}



.container .test1{

  color: chocolate;
  font-size: 33rpx;
  background-color: rgb(250, 253, 250);
  /* border: darkslategray solid; */
  border-radius: 10px;
  /* 内部留边距 */
  padding: 12.5rpx;
  /* 外边框留边距 */
  margin: 12.5rpx;
  /* 以上书写等于以下书写法 */
  /* margin: 12.5rpx 12.5rpx 12.5rpx 12.5rpx; */
  height: 200rpx;
  width: 735;


}

.box-top{

  background-color: deepskyblue;
  height: 60rpx;
  width: auto;
  padding: 5rpx;
  display: flex;
  flex-direction: row;
}
.search-left{
    background-color: rgb(138, 234, 247);
    text-align: left;
    flex: 8;
    display: flex;
    flex-direction: row;
}

.search-left input{
  display: inline-block;
  height: 50rpx;
  font-size: 26rpx;

  flex: 1;
  margin: 5rpx 0rpx 10rpx 10rpx;
}

.search-placeholder{
  color: rgb(245, 245, 248);
  line-height: 20rpx;
}

.search-left image{
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    padding: 15rpx 15rpx 15rpx 20rpx;    

}




.search-right{
  background-color: deepskyblue;
  height: 60rpx;
  flex: 1;

}

.search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}


.box-center{
  background-color: rgb(38, 236, 154);
  flex-grow: 3;
}
.box-bottom{
  background-color: rgb(228, 107, 252);
  height: 60rpx;
}

.flex-item{
  display: flex;
  flex-direction: column;
  text-align: center;
}


