.container {
  height: 1070rpx;
  background: rgb(243, 239, 239);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  

}

.container .msg-box {
  background: rgb(252, 252, 251);
  display: flex;
  width: 750rpx;
  margin: 0 0 10rpx 0;
  
}

.container .msg-box .msg-head {
 
  display: flex;
  width: 100rpx;
  height: auto;
  justify-content: center;
  align-items: center;
}
.container .msg-box .msg-head image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  vertical-align: middle;
  
}

.container .msg-box .msg-body {
  width: 550rpx;
}

.container .msg-box .msg-body .msg-username {
  margin: 10rpx 20rpx;
  font-size:40rpx;
  color: rgb(6, 110, 93);
}

.container .msg-box .msg-body .msg-content {
  margin: 10rpx 20rpx;
  font-size:32rpx;
  color: gray;


}



.container .msg-box .msg-time{
 
  margin: 40rpx 20rpx;
  display: inline-block;
  height: 120rpx;
  width: 100rpx;
  font-size: 24rpx;
  color: rgb(41, 122, 9)
}